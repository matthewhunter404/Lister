<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
>
<TextView
    android:id="@+id/ItemTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif-condensed"
    android:layout_gravity="top"
    android:textAlignment="center"
    android:textSize="30sp"
    android:textColor="@color/grey_700"
    />
    <TextView
        android:id="@+id/ItemDetail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="top"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/FadeText1"
        />
    <TextView
        android:id="@+id/ItemDetail2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="top"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/FadeText2"
        />
    <TextView
        android:id="@+id/ItemDetail3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="top"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/FadeText3"
        />
    <TextView
        android:id="@+id/ItemDetail4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="top"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/FadeText4"
        />
</LinearLayout>